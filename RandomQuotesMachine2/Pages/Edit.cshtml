@page "{id:long}"
@model RandomQuotesMachine2.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Quote - @Model.Quotes.Id</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="Quotes.Id" type="hidden" />
    <div>
        <label asp-for="Quotes.Qoute"></label>
        <div>
            <textarea asp-for="Quotes.Qoute" rows="5" cols="50"></textarea>
        </div>
        <div>
            <label>Author:</label>
            <input asp-for="Quotes.Author" type="text" size="50" />
        </div>
        <div>
            <input asp-for="Quotes.IsSelected" type="number" value="0" hidden />
        </div>
        <div>
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}