@page "{id:long}"
@model RandomQuotesMachine2.Pages.QuoteModel
@{
    ViewData["Title"] = "Quote";
}

<div class="wrapper">
    <div class="content">
        <div class="text-center">
            <h2>@Model.Quote.Qoute</h2>

            <p>@Model.Quote.Author</p>


        </div>

    </div>
    <div class="top-space button-bar">
        <div class="text-left button-bar-right">
            <a asp-page="./Quote" asp-route-id="@Model.RandomQuote.Id" class="btn btn-primary">New Random Quote</a>
        </div>
        
        <div class="text-right button-bar-left">
            <a href="#" class="btn btn-default">Twitter</a>
            <a href="#" class="btn btn-default">Facebook</a>
            <a href="#" class="btn btn-default">Pinterest</a>
        </div>
        
    </div>
    
</div>

